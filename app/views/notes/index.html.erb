<h1>Listing Notes</h1>

<table>
  <tr>
    <th>name</th>
    <th>text</th>
	<th>link</th>
    <th></th>
    <th></th>
    <th></th>

  </tr>

<% @notes.each do |note| %>
  
  <tr>
	<td><%= note.name%></td>
	<td><%= note.text%></td>
	<% if note.link.blank? %>
	  <td>none</td>
	<% else %>
		<td><%= link_to "Link to #{note.text}", note.link%></td>
	<% end %>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Note', new_note_path %>
